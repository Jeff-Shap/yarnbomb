<%= stylesheet_link_tag "register.css" %>

<div class="container">
  <div class="row">
    <div class="col-sm-12" style="text-align:center;">
      <h2 class="reg_header">Sign in</h2>
      <br />
    </div>
  </div>
  
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row reg_form_row">
    <div class="field">
      <div class="col-sm-2 col-sm-offset-3" style="text-align:right;">
        <%= f.label :email, "Email:" %>
      </div>
      <div class="col-sm-6 signin_formfield">
        <%= f.email_field :email %>
      </div>
    </div>
  </div>
  <div class="row reg_form_row">
    <div class="field">
      <div class="col-sm-2 col-sm-offset-3" style="text-align:right">
        <%= f.label :password, "Password:" %>
      </div>
      <div class="col-sm-6 signin_formfield">
        <%= f.password_field :password, :autocomplete => 'off' %>
      </div>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="row reg_form_row">
      <div class="col-sm-3 col-sm-offset-5"
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, :id => "rem_me_label" %>
        </div>
      </div>
  <% end -%>
  <div class="row reg_form_row">
    <div class="col-sm-12" style="text-align:center" >
      <div class="actions">
        <%= f.submit "Log in", :class => "yb_button" %>
      </div>
      </div>
    </div>
<% end %>
</div>

<div class="container" style="text-align:center">
<%= render "devise/shared/links" %>
</div>