<div class="container" id="yarn_form_container">
  <div class="row"> 
    <div class="col-sm-5 yarn_form_column" id="yarn_form" >
      <div class="row yarn_form_field_row" id="yarn_form_name_row">
        <div class="col-sm-4 yarn_form_label_column" id="yarn_name_label_column">
          <%= f.label :name, "Name: " %>
        </div>
        <div class="col-sm-6 yarn_form_field_column" id="yarn_name_field_column">
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="row yarn_form_field_row" id="yarn_form_color_row">
        <div class="col-sm-4 yarn_form_label_column" id="yarn_color_label_column">
          <%= f.label :color, "Color: "%>
        </div>
        <div class="col-sm-6 yarn_form_field_column" id="yarn_color_field_column">
          <%= f.text_field :color %>
        </div>
      </div>
      <div class="row yarn_form_field_row" id="yarn_form_weight_row">
        <div class="col-sm-4 yarn_form_label_column" id="yarn_weight_label_column">
          <%= f.label :weight, "Weight: " %>
        </div>
        <div class="col-sm-6 yarn_form_field_column" id="yarn_weight_field_column">
          <%= f.text_field :weight %>
        </div>
      </div>
      <div class="row yarn_form_field_row" id="yarn_form_gauge_row">
        <div class="col-sm-4 yarn_form_label_column" id="yarn_gauge_label_column">
          <%= f.label :gauge, "Gauge: " %>
        </div>
        <div class="col-sm-6 yarn_form_field_column" id="yarn_gauge_field_column">
          <%= f.text_field :gauge %>
        </div>
      </div>
      <div class="row yarn_form_field_row" id="yarn_form_skeins_row">
        <div class="col-sm-4 yarn_form_label_column" id="yarn_skeins_label_column">
          <%= f.label :num_of_skeins, "# of Skeins: " %>
        </div>
        <div class="col-sm-6 yarn_form_field_column" id="yarn_skeins_field_column">
          <%= f.number_field :num_of_skeins, :value => 0, :min => 1, :max => 5 %>
        </div>
      </div>
      
      <div class="row yarn_form_field_row skein_row", id="skein_template">
        <div class="col-sm-4 yarn_form_label_column">
          <%= f.label :skein_length, "Skein 1 Length: " %>
        </div>
        <div class="col-sm-6 yarn_form_field_column" >
          <%= f.number_field :skein_length, :value => 0 %>
        </div>
