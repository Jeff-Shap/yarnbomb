  They will automatically be included in application.css.
*/


.yarn_form_column {
  
  height: 250px;
  margin: 10px 4%;
}

.yarn_form_field_row {
  width: 95%;
  margin: auto;
  margin-bottom: 25px;
  position: relative;
  top: 15px;
  left: 10%;
}

.yarn_form_label_column {
  text-align: right;
}

#submit_column {
  padding-left: 2px;
  width: 29%;
  left: 54%;
}

#image_window {
  border: 1px solid white;
  height: 220px;
  width: 80%;
  position: relative;
  left: -10%;
  background-image: url(<%= asset_path 'catyarn_first.jpg'%>);
  background-size: cover;
}

.skein_row {
  visibility: hidden;
  position: relative;
  top: -50px;
}