.yarn_form_column {
  
  height: 250px;
  margin: 10px 4%;
}

.yarn_form_field_row {
  width: 95%;
  margin: auto;
  margin-bottom: 25px;
  position: relative;
  top: 15px;
  left: 10%;
}

.yarn_form_label_column {
  text-align: right;
}

#submit_column {
  padding-left: 2px;
  width: 29%;
  left: 54%;
}

#image_window {
  border: 1px solid white;
  height: 220px;
  width: 80%;
  position: relative;
  left: -10%;
  background-image: url(<%= asset_path 'catyarn_first.jpg'%>);
  background-size: cover;
}

#skein_pop {
  position: relative;
  top: 350px;
  border: 2px solid red;
  height: 430px;
  width: 90%;
  margin: auto;
  background-color: rgba(75,75,75,0.3);
}

#skein_pop_inner {
  width: 40%;
  height: 30%;
  margin: auto;
  border: 1px solid green;
  position: relative;
  top: 34%;
  background-color: white;
  }

  #skein_pop_header {
    text-align: center;
  }